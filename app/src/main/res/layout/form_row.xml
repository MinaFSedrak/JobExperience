<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/form_username"
        android:text="Form username Goes Here ..."
        android:textSize="16dp"
        android:textIsSelectable="true"
        android:padding="10dp"
        android:textStyle="bold"
        android:background="@drawable/input_outline"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/form_email"
        android:text="Form Email Goes Here ..."
        android:textSize="16dp"
        android:textIsSelectable="true"
        android:padding="10dp"
        android:textStyle="bold"
        android:background="@drawable/input_outline"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/form_mobile"
        android:text="Form Mobile Goes Here ..."
        android:textSize="16dp"
        android:textIsSelectable="true"
        android:padding="10dp"
        android:textStyle="bold"
        android:background="@drawable/input_outline"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/form_categorie"
        android:text="Form Categorie Goes Here ..."
        android:textSize="16dp"
        android:textIsSelectable="true"
        android:padding="10dp"
        android:textStyle="bold"
        android:background="@drawable/input_outline"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/form_experience"
        android:text="Form Experience Goes Here ..."
        android:textSize="16dp"
        android:textIsSelectable="true"
        android:padding="10dp"
        android:textStyle="bold"
        android:background="@drawable/input_outline"
        />
</LinearLayout>

</LinearLayout>